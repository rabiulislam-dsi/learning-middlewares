<form action="/students/edit/{{student.student_id}}" method="POST" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="Name" value={{student.student_name}}>
    <input type="text" name="age" placeholder="Age" value={{student.student_age}}>
    <input type=" text" name="grade" placeholder="Grade" value={{student.student_grade}}>
    <input type="file" name="image" placeholder="Profile picture" value={{student.student_image_path}}>
    <input type="submit">
</form>